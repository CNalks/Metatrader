/**
 * 全局样式表
 */

/* 页面基础样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f6f6f6;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 卡片内容样式 */
.card-content {
  padding: 24rpx;
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

/* 副标题样式 */
.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 描述文本样式 */
.desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 分隔线样式 */
.divider {
  height: 1px;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #3A7BD5;
  background-color: rgba(58, 123, 213, 0.1);
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #3A7BD5;
  border-radius: 8rpx;
  text-align: center;
}

.btn-small {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

.btn-outline {
  color: #3A7BD5;
  background-color: transparent;
  border: 1px solid #3A7BD5;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  padding: 24rpx;
  border-bottom: 1px solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

/* 加载更多样式 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 无数据提示样式 */
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 图标样式 */
.icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

/* 文本溢出省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 边距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }
.p-20 { padding: 20rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-20 { padding-bottom: 20rpx; }

/* 主题颜色 */
.text-primary { color: #3A7BD5; }
.text-success { color: #52c41a; }
.text-warning { color: #faad14; }
.text-danger { color: #f5222d; }
.text-gray { color: #999; }
.bg-primary { background-color: #3A7BD5; }
.bg-light { background-color: #f6f6f6; }